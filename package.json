{
  "name": "join-table",
  "description": "Collection class for many-to-many joins.",
  "version": "2.0.0",
  "ava": {
    "files": "dist/**/*.test.js"
  },
  "babel": {
    "presets": [
      "es2015-node4",
      "stage-0"
    ],
    "plugins": [
      "transform-flow-strip-types"
    ]
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-cli": "^6.16.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-es2015-node4": "^2.1.0",
    "babel-preset-stage-0": "^6.16.0",
    "del-cli": "^0.2.0",
    "eslint": "^3.7.0",
    "eslint-config-airbnb-base": "^8.0.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-flowtype": "^2.19.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-react": "^6.3.0",
    "flow-bin": "^0.33.0"
  },
  "engines": {
    "node": ">=4"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:flowtype/recommended"
    ],
    "root": "true",
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ]
  },
  "files": [
    "dist",
    "src"
  ],
  "jsnext:main": "src/join-table.js",
  "license": "MIT",
  "main": "dist/join-table.js",
  "repository": "callumlocke/join-table",
  "scripts": {
    "build": "del dist && babel src --out-dir dist --source-maps",
    "build:watch": "del dist && babel src --out-dir dist --source-maps --watch",
    "prepublish": "npm run build",
    "test": "eslint . && flow && npm run build && cd dist && ava",
    "test:watch": "cd dist && ava --watch"
  }
}
